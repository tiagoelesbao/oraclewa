{
  "name": "oraclewa-saas",
  "version": "3.0.0",
  "description": "Enterprise WhatsApp automation platform with multi-tenant architecture",
  "main": "apps/api/src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node apps/api/src/index.js",
    "dev": "nodemon apps/api/src/index.js",
    "dev:api": "cd apps/api && npm run dev",
    "dev:dashboard": "cd apps/dashboard && npm run dev",
    "build": "npm run build:api",
    "build:api": "cd apps/api && npm run build",
    "build:dashboard": "cd apps/dashboard && npm run build",
    "test": "npm run test:api && npm run test:integration",
    "test:api": "cd apps/api && npm test",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "k6 run tests/performance/load-test.js",
    "lint": "eslint apps/api/src/ --ext .js",
    "lint:fix": "eslint apps/api/src/ --ext .js --fix",
    "format": "prettier --write apps/api/src/**/*.js",
    "migrate": "cd apps/api && npm run migrate",
    "seed": "cd apps/api && npm run seed",
    "docker:build": "docker build -t oraclewa/api apps/api/",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "client:add": "./scripts/client-management/add-client.sh",
    "client:remove": "./scripts/client-management/remove-client.sh",
    "client:list": "./tools/cli/oraclewa-cli.js clients list",
    "backup": "./scripts/backup/backup-all.sh",
    "restore": "./scripts/backup/restore.sh",
    "health": "./tools/monitoring/health-check.js",
    "metrics": "./tools/monitoring/metrics-collector.js",
    "analyze": "./tools/analytics/broadcast-analyzer.js",
    "setup": "./scripts/setup/install.sh",
    "deploy": "./scripts/setup/deploy.sh",
    "cleanup": "./scripts/maintenance/cleanup.sh"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "saas",
    "multi-tenant",
    "evolution-api",
    "webhook",
    "broadcast",
    "recovery",
    "ecommerce",
    "enterprise",
    "antiban",
    "docker",
    "microservices"
  ],
  "author": {
    "name": "OracleWA Team",
    "email": "dev@oraclewa.com",
    "url": "https://oraclewa.com"
  },
  "license": "Commercial",
  "repository": {
    "type": "git",
    "url": "https://github.com/oraclewa/saas.git"
  },
  "bugs": {
    "url": "https://github.com/oraclewa/saas/issues"
  },
  "homepage": "https://oraclewa.com",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "workspaces": [
    "apps/*",
    "tools/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "apps/api/src/**/*.js",
      "!apps/api/src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}