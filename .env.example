# ================================================
# ORACLEWA SAAS - ENVIRONMENT TEMPLATE
# ================================================

# ========================================
# APPLICATION
# ========================================
NODE_ENV=development
APP_NAME=OracleWA SaaS
APP_VERSION=3.0.0
APP_PORT=3000
APP_URL=http://localhost:3000

# ========================================
# DATABASE - POSTGRESQL
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oraclewa
DB_USER=oraclewa
DB_PASS=your_secure_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========================================
# REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=oraclewa:
REDIS_TTL=3600

# ========================================
# SECURITY
# ========================================
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
API_RATE_LIMIT=100
API_RATE_WINDOW=60000
WEBHOOK_SECRET=your_webhook_secret_here
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# ========================================
# EVOLUTION API
# ========================================
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_WEBHOOK_URL=https://your-domain.com/api/v1/webhook/evolution

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=20m
LOG_MAX_FILES=10
LOG_DATE_PATTERN=YYYY-MM-DD

# ========================================
# MONITORING
# ========================================
METRICS_ENABLED=true
METRICS_PORT=9091
HEALTH_CHECK_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics

# ========================================
# ANTI-BAN CONFIGURATION
# ========================================
ANTIBAN_ENABLED=true
ANTIBAN_DEFAULT_STRATEGY=conti_chips
ANTIBAN_DELAY_MIN=30
ANTIBAN_DELAY_MAX=120
ANTIBAN_BATCH_SIZE=10
ANTIBAN_PAUSE_MIN=60
ANTIBAN_PAUSE_MAX=180

# Default Warmup Settings
WARMUP_DAY1_MIN=10
WARMUP_DAY1_MAX=20
WARMUP_DAY2_MIN=30
WARMUP_DAY2_MAX=40
WARMUP_DAY3_MIN=50
WARMUP_DAY3_MAX=60
WARMUP_MATURE_MIN=70
WARMUP_MATURE_MAX=100

# ========================================
# QUEUE CONFIGURATION
# ========================================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60000

# ========================================
# FILE STORAGE
# ========================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./data/uploads
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=oraclewa-storage

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@oraclewa.com
FROM_NAME=OracleWA SaaS

# ========================================
# NOTIFICATIONS
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# ========================================
# DEVELOPMENT
# ========================================
DEBUG=oraclewa:*
NODE_OPTIONS=--max-old-space-size=4096

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# NODE_ENV=production
# LOG_LEVEL=warn
# DB_SSL=true
# METRICS_ENABLED=true
# DEBUG=

# ========================================
# CLIENT-SPECIFIC OVERRIDES
# These can be overridden per client
# ========================================
DEFAULT_CLIENT_DAILY_LIMIT=500
DEFAULT_CLIENT_HOURLY_LIMIT=50
DEFAULT_CLIENT_CONCURRENT_LIMIT=5
DEFAULT_BROADCAST_DAILY_LIMIT=1000
DEFAULT_BROADCAST_HOURLY_LIMIT=100
DEFAULT_BROADCAST_PER_INSTANCE_LIMIT=350

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_DASHBOARD=false
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=true
FEATURE_BROADCAST=true
FEATURE_RECOVERY=true
FEATURE_TEMPLATES=true
FEATURE_INTERACTIVE_BUTTONS=true
FEATURE_VOICE_MESSAGES=false
FEATURE_VIDEO_MESSAGES=false
FEATURE_AI_PERSONALIZATION=false